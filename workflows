name: SonarQube Analysis

on:
  push:
    branches:
      - main  # Ce workflow se déclenche lors d'un push sur la branche 'main'

jobs:
  sonarqube:
    runs-on: self-hosted  # Ce job s'exécute sur un runner auto-hébergé

    steps:
      - name: Check out code
        uses: actions/checkout@v2  # Récupère le code du dépôt

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14'  # Utilise Node.js version 14 (ajustez si nécessaire)

      - name: Install dependencies
        run: npm install  # Installe les dépendances via npm

      - name: Run SonarQube Scanner
        env:
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}  # Utilise le token SonarQube stocké dans les secrets GitHub
        run: |
          sonar-scanner \
            -Dsonar.projectKey=Tp_sonar \
            -Dsonar.sources=. \
            -Dsonar.host.url=http://localhost:9000 \
            -Dsonar.login=$SONAR_TOKEN  # Lance l'analyse SonarQube
